extends layout

block content
    include navbar
    h1 Zakup książkę
    .container
      #content
        form.form-horizontal(method="post")
          .form-group.form-group-lg
            label.col-sm-2.control-label(for='user') Osoba
            .col-xs-4
              select#user.form-control(name='user')
                each person in users
                  option(value= person.idosoba)=person.imie + " " + person.nazwisko
          button.btn.btn-primary(type='submit', id='add-button') Zakup